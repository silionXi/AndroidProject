<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:simpleimg="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_view_acitivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.silion.androidproject.customview.CustomViewActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="参考《Anroid开发进阶》P46"
        android:textColor="#0000ff"/>

    <Button
        android:id="@+id/btSimpleImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义ImageView"/>

    <Button
        android:id="@+id/btPullRefreshView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义下拉更新View"/>

    <com.silion.androidproject.customview.GradientTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Android Text View"/>
</LinearLayout>
