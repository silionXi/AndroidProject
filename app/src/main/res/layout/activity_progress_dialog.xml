<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".progressdialog.ProgressDialogActivity">

    <Button
        android:id="@+id/btNewDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="创建实例"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btStatic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="静态方式1"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/btStatic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="静态方式2"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/btStatic3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="静态方式3"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/btStatic4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="静态方式4"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/btCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="圆形进度条"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="水平进度条"
        android:textSize="22sp"/>
</LinearLayout>
