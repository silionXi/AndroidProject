<?xml version="1.0" encoding="utf-8"?>
<com.silion.androidproject.customview.ViewDragHelperLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.silion.androidproject.customview.GradientTextView
        android:text="可以拖拽各个图片"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/viewpager3"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/viewpager1"/>

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="#ffff00"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/viewpager2"/>
</com.silion.androidproject.customview.ViewDragHelperLayout>