<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_standard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.silion.androidproject.launchmode.StandardActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="我是Standard模式Activity"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/standardBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="启动standard"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/singleTopBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="启动singleTop"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/singleTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="启动singleTask"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/singleInstanceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="启动singleInstance"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/flagNewTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="FLAG_ACTIVITY_NEW_TASK"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/flagSingleTopBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="FLAG_ACTIVITY_SINGLE_TOP"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/flagClearTopBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="FLAG_ACTIVITY_CLEAR_TOP"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/flagClearTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="FLAG_ACTIVITY_CLEAR_TASK"
        android:textAllCaps="false"
        android:textSize="20sp"/>
</LinearLayout>
